@model List<HealthyLifeStyle.Web.Models.Hospital.ListViewModel>

@{
    ViewData["Title"] = "Hastane Listesi";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Hospital List

            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-lg-12">
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-responsive-sm table-bordered table-striped table-sm">
                        <thead>
                            <tr>

                                <th>*</th>
                                <th>
                                    Name

                                </th>
                                <th>
                                    Phone
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a class="btn btn-sm btn-danger" href="~/Hospital/Edit/@item.Id">Edit</a></td>
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>

                <nav>
                </nav>

                @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="text-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                @if (ViewBag.ErrorMessageList != null)
                {
                    <div class="text-danger">
                        @foreach (var item in ViewBag.ErrorMessageList)
                        {
                            <span>@item</span>
                            <br />
                        }
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- /.col-->
</div>

