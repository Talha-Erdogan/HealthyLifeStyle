@{
    ViewData["Title"] = "Hastane Kullanıcı Listesi";
}

@model List<HealthyLifeStyle.Web.Models.User.ListViewModel>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Hastane Kullanıcı Listesi
            </div>
            <div class="card-body">

                <div class="row">
                </div>

                <div class="table-responsive">
                    <table class="table table-responsive-sm table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                
                                <th>
                                    Name
                                </th>
                                <th>
                                    LastName
                                </th>
                                <th>
                                    Blood Group
                                </th>
                                <th>
                                    GSM
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    Hospital
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td>@item.Name</td>
                                    <td>@item.LastName</td>
                                    <td>@item.BloodGroup_Name</td>
                                    <td>@item.GSM</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Hospital_Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="text-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                @if (ViewBag.ErrorMessageList != null)
                {
                    <div class="text-danger">
                        @foreach (var item in ViewBag.ErrorMessageList)
                        {
                            <span>@item</span>
                            <br />
                        }
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- /.col-->
</div>

@section Scripts {
    <script>

    </script>
}

