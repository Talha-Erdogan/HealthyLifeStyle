@{
    ViewData["Title"] = "Hastane Kan İhtiyacı";
}

@model List<HealthyLifeStyle.Web.Models.NeedForBlood.ListViewModel>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Kan İhtiyaç Listesi
            </div>
            <div class="card-body">

                <div class="row">
                </div>

                <div class="table-responsive">
                    <table class="table table-responsive-sm table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th>*</th>
                                <th>
                                    Blood Group
                                </th>
                                <th>
                                    Count
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-sm btn-danger" href="~/NeedForBlood/Edit/@item.Id">Edit</a>
                                    </td>
                                    <td>@item.BloodGroup_Name</td>
                                    <td>@item.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="text-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                @if (ViewBag.ErrorMessageList != null)
                {
                    <div class="text-danger">
                        @foreach (var item in ViewBag.ErrorMessageList)
                        {
                            <span>@item</span>
                            <br />
                        }
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- /.col-->
</div>

@section Scripts {
    <script>
        
    </script>
}





